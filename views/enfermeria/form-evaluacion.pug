extends ../layout

block content
  h1.mb-4 Evaluación Inicial de Enfermería

  .card.p-4
    h3.mb-3 Paciente: #{admision.nombre} #{admision.apellido}

    form(action="/enfermeria/guardar" method="POST")

      input(type="hidden" name="id_admision" value=admision.id_admision)

      .row
        .col-md-6.mb-3
          label.form-label Antecedentes
          textarea.form-control(name="antecedentes" required rows="3")

        .col-md-6.mb-3
          label.form-label Alergias
          textarea.form-control(name="alergias" required rows="3")

      .mb-3
        label.form-label Medicamentos actuales
        textarea.form-control(name="medicamentos" rows="3")

      .mb-3
        label.form-label Motivo de internación
        textarea.form-control(name="motivo_internacion" required rows="3")

      hr

      h4.mb-3 Signos Vitales

      .row
        .col-md-3.mb-3
          label.form-label Temperatura (°C)
          input.form-control(type="number" step="0.1" name="temp" required)

        .col-md-3.mb-3
          label.form-label Frecuencia Cardíaca (lpm)
          input.form-control(type="number" name="fc" required)

        .col-md-3.mb-3
          label.form-label Frecuencia Respiratoria (rpm)
          input.form-control(type="number" name="fr" required)

        .col-md-3.mb-3
          label.form-label Presión Arterial
          input.form-control(type="text" name="pa" placeholder="120/80" required)

      button.btn.btn-success.mt-3(type="submit") Guardar Evaluación
