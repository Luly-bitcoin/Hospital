doctype html
html
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title HIS Internación

    // Bootstrap CSS
    link(
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    )

    // CSS del proyecto
    link(rel="stylesheet", href="/css/style.css")
    link(rel="stylesheet", href="/css/camas.css")

  body(class="bg-light")

    // ======== HEADER / NAVBAR ========
    nav.navbar.navbar-expand-lg.navbar-dark.bg-primary.shadow-sm
      .container

        // LOGO + NOMBRE DEL HOSPITAL
        a.navbar-brand.d-flex.align-items-center(href="/")
          img(src="/img/logo.png" alt="Logo Hospital" style="width:50px;height:50px;margin-right:10px;border-radius:8px;")
          span.fw-bold Hospital Central San Luis

        // BOTÓN PARA MÓVILES
        button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav")
          span.navbar-toggler-icon

        // MENÚ
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav.ms-auto.gap-3
            li.nav-item
              a.nav-link.fw-semibold(href="/") Inicio
            li.nav-item 
              a.nav-link.fw-semibold(href="/pacientes/registrar") Registrar Paciente
            li.nav-item 
              a.nav-link.fw-semibold(href="/pacientes/lista-pacientes") Lista de Pacientes
            li.nav-item
              a.nav-link.fw-semibold(href="/camas") Camas
            li.nav-item
              a.nav-link.fw-semibold(href="/admisiones") Admisiones
            li.nav-item
              a.nav-link.fw-semibold(href="/enfermeria") Enfermería
            li.nav-item
              a.nav-link.fw-semibold(href="/alta") Altas

    // ======== CONTENIDO DE CADA VISTA ========
    .container.mt-4.mb-5
      block content

    // ======== FOOTER ========
    footer.text-center.text-white.bg-primary.py-3.mt-5.shadow-sm
      p.mb-0 © 2025 Hospital Central San Luis — Todos los derechos reservados

    // Bootstrap JS
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")